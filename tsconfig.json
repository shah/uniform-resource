{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "module": "umd",
        "moduleResolution": "node",
        "resolveJsonModule": false,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "preserve",
        "typeRoots": [
            "./node_modules/@types",
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "**/node_modules",
        "dist",
        "**/.*/"
    ],
}